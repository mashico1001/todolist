<div class="container">
  <h1>詳細画面</h1>
  <table class="task-show-table">
    <thead>
      <tr>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td>Title</td>
        <td><%= @task.title %></td>
      </tr>
      <tr>
        <td>Body</td>
        <td><%= @task.body %></td>
      </tr>
      <tr>
        <td>〆切</td>
        <td><%= @task.deadline_at.strftime("%Y/%m/%d %H:%M") %></td>
      </tr>
      <tr>
        <td><%= link_to "Edit", edit_task_path(@task), class: 'btn btn-task-edit' %></td>
        <td><%= link_to "Delete", task_path(@task), method: :delete, class: 'btn btn-task-destroy' %></td>
      </tr>
      <tr>
        <td><%= link_to "Back", tasks_path, class: 'btn btn-back' %></td>
        <td></td>
      </tr>
    </tbody>
    
  </table>
</div>